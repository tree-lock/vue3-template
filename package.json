{
  "name": "xmo-vue3-template",
  "description": "vue3+vite+ts开发模板",
  "homepage": "https://darkxmo.github.io/vue3-template",
  "license": "MIT",
  "version": "1.1.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:release": "vue-tsc --noEmit && vite build --mode release",
    "build:template": "vue-tsc --noEmit && vite build --outDir docs --mode template && cp docs/index.html docs/404.html",
    "preview": "vite preview",
    "commit": "git add . && git status && git-cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.10",
    "@types/js-cookie": "^3.0.2",
    "@types/lodash-es": "*",
    "@types/mockjs": "^1.0.7",
    "@vitejs/plugin-vue": "^3.1.2",
    "axios": "^1.1.3",
    "dotenv": "^16.0.3",
    "element-plus": "^2.2.19",
    "js-cookie": "^3.0.1",
    "less": "^4.1.3",
    "mockjs": "^1.1.0",
    "once-init": "^1.0.0",
    "rollup-plugin-visualizer": "^5.8.3",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.8",
    "vite": "^3.1.8",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue": "^3.2.41",
    "vue-router": "^4.1.5",
    "vue-tsc": "^1.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "git-cz": "^4.9.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.vue": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.js": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.ts": [
      "prettier --write --ignore-unknown"
    ]
  }
}
